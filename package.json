{
  "name": "ea",
  "version": "0.1.0",
  "private": true,
  "description": "Executive Assistant - AI-powered daily briefs from email & calendar",
  "author": "Jason Chiang",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:bot": "npm run dev --workspace=apps/bot",
    "build": "npm run build:packages && npm run build --workspace=apps/web",
    "build:packages": "npm run build -w @ea/core -w @ea/db -w @ea/google",
    "build:bot": "npm run build:packages && npm run build --workspace=apps/bot",
    "start": "npm run start --workspace=apps/web",
    "start:bot": "npm run start --workspace=apps/bot",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "npm run db:migrate --workspace=apps/web",
    "db:generate": "npm run db:generate --workspace=apps/web",
    "db:studio": "npm run db:studio --workspace=apps/web",
    "lint": "eslint apps packages --ext .ts,.tsx",
    "lint:fix": "eslint apps packages --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "refresh": "tsx scripts/refresh-brief.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{json,css,md,html,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
